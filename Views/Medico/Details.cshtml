@model turnos.Models.Medico

<h4>Medico</h4>

<table class="table  table-striped table-bordered" >
    <thead class="bg-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
             <th>
                 @Html.DisplayNameFor(model => model.HorarioAtencionDesde)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.HorarioAtencionHasta)
            </th>
             <th>
                 @Html.DisplayNameFor(model => model.MedicoEspecialidad[0].Especialidad)
            </th>
        </tr>
    </thead>
    <tbody>
        <td>
           @Html.DisplayFor(modelo => modelo.Nombre)
        </td>
        <td>
             @Html.DisplayFor(modelo => modelo.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Email)
        </td>
        <td>
             @Html.DisplayFor(modelo => modelo.HorarioAtencionDesde)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.HorarioAtencionHasta)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.MedicoEspecialidad[0].Especialidad.Descripcion)
        </td>
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdMedico" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>