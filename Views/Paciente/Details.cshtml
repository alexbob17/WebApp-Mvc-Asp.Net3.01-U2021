@model turnos.Models.Paciente

<h4>Paciente</h4>
<table class="table table-striped table-bordered">
    <thead class="bg-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(modelo => modelo.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        <td>
            @Html.DisplayFor(modelo => modelo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelo => modelo.Email)
        </td>
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdPaciente" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>