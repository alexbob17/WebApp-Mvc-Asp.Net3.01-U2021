@model IEnumerable<turnos.Models.Especialidad>

<p>
    <a asp-action="Create" class="btn btn-success ">Nueva Especialidad<i class="fas fa-plus-circle ml-2"></i></a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @*comentario*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEspecialidad" class="btn btn-primary"><i
                        class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidad" class="btn btn-danger"><i
                        class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
